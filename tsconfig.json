{
  "compileOnSave": true,
  "compilerOptions": {
    "declaration": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "rootDir": "src",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "target": "ES2021",
    "locale": "zh-CN",
    "lib": [
      "ESNext"
    ],
    "newLine": "LF",
    "pretty": true,
    "useDefineForClassFields": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}
